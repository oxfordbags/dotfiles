# Beet Importer 

# Beet importer helper
beet-importer() {
    case "$1" in
        restart)
            echo "Stopping beet importer..."
            launchctl unload ~/Library/LaunchAgents/com.oxfordbags.beet-importer.plist
            echo "Starting beet importer..."
            launchctl load ~/Library/LaunchAgents/com.oxfordbags.beet-importer.plist
            echo "Beet importer restarted."
            ;;
        logs)
            # Optionally follow logs
            if [[ "$2" == "-f" || "$2" == "--follow" ]]; then
                tail -f ~/Library/Logs/beet-importer.log \
                    ~/Library/Logs/beet-importer.stdout.log \
                    ~/Library/Logs/beet-importer.stderr.log
            else
                cat ~/Library/Logs/beet-importer.log \
                    ~/Library/Logs/beet-importer.stdout.log \
                    ~/Library/Logs/beet-importer.stderr.log
            fi
            ;;
        *)
            echo "Usage: beet-importer {restart|logs [-f|--follow]}"
            ;;
    esac
}
